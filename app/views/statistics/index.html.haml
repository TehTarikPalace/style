.col-sm-12
  %h1.page-header Statistics
  %ul.breadcrumb
    %li
      %a{ :href => settings_path} Settings
    %li.active
      Statistics
  %h2.page-header Categories
  - if @categories.empty? then
    %p No Categories yet
  - else
    .row
      .col-sm-4
        %ul.list-group
        - @categories.each do |category|
          %li.list-group-item #{category.name}
  %br
  %a.btn.btn-primary{ :href => edit_categories_statistics_path } Edit Categories


  %h2.page-header Headers
  %p Note: You need to update the categories section to use new categories
  - if @headers.empty? then
    %p No headers detected
  - else
    %table.table
      %thead
        %tr
          %th Entry
          %th Display name
          %th Category
      %tbody
        - @headers.each do |header|
          %tr
            %td #{ header.name }
            %td #{ header.display_name }
            %td #{ header.stat_category.name }
  %button.btn.btn-primary{ :type => "button"} Edit Headers
