.row
  .col-sm-12
    %h1.page-header Edit Headers
  .col-sm-12
    %ul.breadcrumb
      %li
        %a{:href => settings_path} Settings
      %li
        %a{:href => statistics_path } Statistics
      %li.active Headers
  .col-sm-12
    = form_tag update_headers_statistics_path, :method => :patch do
      %table.table
        %tbody#header-list
          - @headers.each do |header|
            = render :template => 'statistics/new_header.template', :locals => { :header => header }
          %tr#new-header-tr
            %td
              %a.btn.btn-primary#new-header
                %i.fa.fa-plus
      %button.btn.btn-primary{ :type => 'submit'} Update Headers
